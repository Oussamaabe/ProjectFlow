{% extends 'base.html.twig' %}

{% block title %}Contact - ProjectFlow{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="text-center mb-5" style="color: var(--text-color);">Contactez-nous</h1>
    
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card" style="background-color: var(--card-bg); box-shadow: var(--shadow);">
                <div class="card-body p-5">
                    <div class="row mb-5">
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <div class="rounded-circle p-3 d-inline-block mb-3" style="background-color: var(--primary); color: white;">
                                <i class="fas fa-map-marker-alt fa-2x"></i>
                            </div>
                            <h5 style="color: var(--text-color);">Adresse</h5>
                            <p style="color: var(--text-color);">123 Avenue des Projets<br>Casablanca, Maroc</p>
                        </div>
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <div class="rounded-circle p-3 d-inline-block mb-3" style="background-color: var(--primary); color: white;">
                                <i class="fas fa-phone fa-2x"></i>
                            </div>
                            <h5 style="color: var(--text-color);">Téléphone</h5>
                            <p style="color: var(--text-color);">+212 6 12 34 56 78</p>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="rounded-circle p-3 d-inline-block mb-3" style="background-color: var(--primary); color: white;">
                                <i class="fas fa-envelope fa-2x"></i>
                            </div>
                            <h5 style="color: var(--text-color);">Email</h5>
                            <p style="color: var(--text-color);">contact@projectflow.ma</p>
                        </div>
                    </div>
                    
                    <div class="mb-5 text-center">
                        <h3 class="mb-4" style="color: var(--text-color);">Suivez-nous</h3>
                        <div class="d-flex justify-content-center">
                            <a href="#" class="btn btn-outline-primary btn-social mx-2">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="btn btn-outline-primary btn-social mx-2">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="btn btn-outline-primary btn-social mx-2">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                            <a href="#" class="btn btn-outline-primary btn-social mx-2">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>
                    </div>
                    
                    <h3 class="text-center mb-4" style="color: var(--text-color);">Envoyez-nous un message</h3>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label" style="color: var(--text-color);">Nom complet</label>
                            <input type="text" class="form-control" id="name" required style="background-color: var(--card-bg); color: var(--text-color); border-color: var(--border-color);">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label" style="color: var(--text-color);">Adresse email</label>
                            <input type="email" class="form-control" id="email" required style="background-color: var(--card-bg); color: var(--text-color); border-color: var(--border-color);">
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label" style="color: var(--text-color);">Sujet</label>
                            <input type="text" class="form-control" id="subject" required style="background-color: var(--card-bg); color: var(--text-color); border-color: var(--border-color);">
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label" style="color: var(--text-color);">Message</label>
                            <textarea class="form-control" id="message" rows="5" required style="background-color: var(--card-bg); color: var(--text-color); border-color: var(--border-color);"></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Envoyer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-social {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-color: var(--border-color);
    }
</style>
{% endblock %}