{% extends 'base.html.twig' %}

{% block title %}Ajouter une facture - {{ projet.nom }}{% endblock %}

{% block body %}
<div class="container mt-4" style="color: var(--text-color);">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Ajouter une facture au projet: {{ projet.nom }}</h1>
        <a href="{{ path('app_projet_show', {'id': projet.id}) }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i> Retour
        </a>
    </div>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i> Enregistrer
        </button>
    {{ form_end(form) }}
</div>
{% endblock %}