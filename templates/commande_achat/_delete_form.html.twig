{# Formulaire générique avec bouton de sauvegarde #}
{{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn btn-primary">
        <i class="fas fa-save me-1"></i> {{ button_label|default('Enregistrer') }}
    </button>
{{ form_end(form) }}

{# Formulaire de suppression avec SweetAlert2 #}
<form method="post" action="{{ path('app_commande_achat_delete', {'id': commande_achat.id}) }}" 
      onsubmit="confirmDelete(event, 'Êtes-vous sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande_achat.id) }}">
    <button class="btn btn-danger">
        <i class="fas fa-trash me-1"></i> Supprimer
    </button>
</form>