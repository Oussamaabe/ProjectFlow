{% extends 'base.html.twig' %}

{% block title %}Modifier l'affaire - {{ affaire.titre }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Modifier l'affaire: {{ affaire.titre }}</h1>
            <a href="{{ path('app_affaire_show', {'id': affaire.id}) }}" class="btn btn-info">
                <i class="fas fa-eye me-2"></i> Voir détails
            </a>
        </div>

        <div class="card" style="color: var(--text-color);">
            <div class="card-header bg-warning text-dark">
                <h2 class="mb-0">
                    <i class="fas fa-edit me-2"></i>
                    Formulaire de modification
                </h2>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.titre) }}
                            {{ form_row(form.type) }}
                            {{ form_row(form.status) }}
                            {{ form_row(form.client) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.dateDebut) }}
                            {{ form_row(form.dateFin) }}
                            {{ form_row(form.montant) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.description) }}
                            {{ form_row(form.resultat) }}
                        </div>
                    </div>
                    
                    <div class="mt-4 d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-2"></i> Mettre à jour
                        </button>
                        
                        <div>
                            <a href="{{ path('app_affaire_index') }}" class="btn btn-secondary me-2">
                                <i class="fas fa-times me-2"></i> Annuler
                            </a>
                            <a href="{{ path('app_affaire_show', {'id': affaire.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Retour
                            </a>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}