{# templates/profile/change_password.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe - ProjectFlow{% endblock %}

{% block body %}
<div class="container mt-5 ">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card profile-card">
                <div class="profile-card-header">
                    <i class="fas fa-lock me-2"></i> Modifier le mot de passe
                </div>
                <div class="profile-card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.oldPassword, {
                                'label': 'Ancien mot de passe',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                        
                        <div class="mb-4">
                            {{ form_row(form.newPassword, {
                                'label': 'Nouveau mot de passe',
                                'attr': {'class': 'form-control'}
                            }) }}
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_profile') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Retour au profil
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i> Enregistrer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}