{# article/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouvel article{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">Créer un nouvel article</h1>
            <a href="{{ path('app_article_index') }}" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-1"></i> Retour à la liste
            </a>
        </div>
        
        <div class="card border-0 shadow" style="color: var(--text-color);">
            <div class="card-header bg-primary text-white py-3">
                <div class="d-flex align-items-center">
                    <i class="fas fa-plus fa-lg me-3"></i>
                    <h2 class="h5 mb-0">Nouvel article</h2>
                </div>
            </div>
            <div class="card-body">
                {{ include('article/_form.html.twig', {'form_title': 'Créer un nouvel article'}) }}
            </div>
        </div>
    </div>
{% endblock %}