{# article/_form.html.twig #}
<div class="container mt-4 article-form">
    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        {% if form_title is defined %}
            <h3 class="h4 mb-4 text-primary">{{ form_title }}</h3>
        {% endif %}
        
        <div class="row g-4">
            {# Première colonne #}
            <div class="col-md-6">
                <div class="form-floating">
                    {{ form_widget(form.reference, {'attr': {
                        'class': 'form-control',
                        'placeholder': ' '
                    }}) }}
                    {{ form_label(form.reference, null, {'label_attr': {'class': 'form-label'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.reference) }}
                    </div>
                </div>

                <div class="form-floating mt-4">
                    {{ form_widget(form.designation, {'attr': {
                        'class': 'form-control',
                        'placeholder': ' '
                    }}) }}
                    {{ form_label(form.designation, null, {'label_attr': {'class': 'form-label'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.designation) }}
                    </div>
                </div>

                <div class="form-floating mt-4">
                    <div class="input-group">
                        <span class="input-group-text bg-light">Prix unitaire</span>
                        {{ form_widget(form.prixUnitaire, {'attr': {
                            'class': 'form-control',
                            'placeholder': '0.00'
                        }}) }}
                       
                         <span class="input-group-text bg-light">MAD</span>
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.prixUnitaire) }}
                    </div>
                </div>
            </div>

            {# Deuxième colonne #}
            <div class="col-md-6">
                <div class="form-floating">
                    {{ form_widget(form.uniteMesure, {'attr': {
                        'class': 'form-select',
                        'placeholder': ' '
                    }}) }}
                    {{ form_label(form.uniteMesure, null, {'label_attr': {'class': 'form-label'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.uniteMesure) }}
                    </div>
                </div>

                <div class="form-floating mt-4">
                    {{ form_widget(form.categorie, {'attr': {
                        'class': 'form-select',
                        'placeholder': ' '
                    }}) }}
                    {{ form_label(form.categorie, null, {'label_attr': {'class': 'form-label'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.categorie) }}
                    </div>
                </div>

                <div class="form-floating mt-4">
                    <div class="input-group">
                        <span class="input-group-text bg-light">TVA</span>
                        {{ form_widget(form.tva, {'attr': {
                            'class': 'form-control',
                            'placeholder': ''
                        }}) }}
                        <span class="input-group-text bg-light">%</span>
                        
                    </div>
                    <div class="invalid-feedback">
                        {{ form_errors(form.tva) }}
                    </div>
                </div>
            </div>
            
            {# Troisième colonne (pleine largeur) #}
            <div class="col-12 mt-4">
                <div class="form-floating">
                    {{ form_widget(form.description, {'attr': {
                        'class': 'form-control',
                        'placeholder': ' ',
                        'style': 'height: 120px'
                    }}) }}
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.description) }}
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 mt-4">
                <div class="form-floating">
                    {{ form_widget(form.fournisseur, {'attr': {
                        'class': 'form-select',
                        'placeholder': ' '
                    }}) }}
                    {{ form_label(form.fournisseur, null, {'label_attr': {'class': 'form-label'}}) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.fournisseur) }}
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 mt-4">
                <div class="form-check form-switch d-flex align-items-center">
                    {{ form_widget(form.actif, {'attr': {
                        'class': 'form-check-input',
                        'role': 'switch',
                        'style': 'width: 3rem; height: 1.5rem;'
                    }}) }}
                    <label class="form-check-label ms-3 fw-medium" for="{{ form.actif.vars.id }}">
                        Article actif
                    </label>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between border-top pt-4 mt-5">
            <button type="reset" class="btn btn-secondary px-4">
                <i class="fas fa-undo me-2"></i> Réinitialiser
            </button>
            <button type="submit" class="btn btn-success px-4">
                <i class="fas fa-save me-2"></i> {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    {{ form_end(form) }}
</div>