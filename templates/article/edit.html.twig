{# article/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">Modifier {{ article.designation }}</h1>
            <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-outline-info">
                <i class="fas fa-eye me-1"></i> Voir détails
            </a>
        </div>
        
        <div class="card border-0 shadow" style="color: var(--text-color);">
            <div class="card-header bg-warning text-dark py-3">
                <div class="d-flex align-items-center">
                    <i class="fas fa-edit fa-lg me-3"></i>
                    <h2 class="h5 mb-0">Modification d'article</h2>
                </div>
            </div>
            <div class="card-body">
                {{ include('article/_form.html.twig', {'form_title': 'Modifier l\'article', 'button_label': 'Mettre à jour'}) }}
            </div>
        </div>
        
        <div class="d-flex justify-content-end gap-3 mt-4 pt-3 border-top">
            <a href="{{ path('app_article_index') }}" class="btn btn-secondary">
                <i class="fas fa-list me-1"></i> Retour à la liste
            </a>
            <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" 
                  onsubmit="confirmDelete(event, 'Êtes-vous sûr de vouloir supprimer cet article ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                <button class="btn btn-danger">
                    <i class="fas fa-trash me-1"></i> Supprimer
                </button>
            </form>
        </div>
    </div>
{% endblock %}