{# templates/societe/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier une Société{% endblock %}

{% block styles %}
<style>
    .form-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
        
    }
    .form-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }
    .form-card {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        border: 3px solid #ddd;

    }
    .form-group {
        margin-bottom: 1.5rem;
    }
    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }
    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 3px solid #ddd;
        border-radius: 4px;
        font-size: 1rem;
    }
    .form-control-sm {
        max-width: 200px;
    }
    .form-section {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }
    .form-section-title {
        font-size: 1.1rem;
        color: #2c3e50;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 2rem;
    }
    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        border: none;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    .btn-primary {
        background-color: #007bff;
        color: white;
    }
    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }
    .btn-outline {
        background: transparent;
        border: 1px solid #ddd;
        color: #333;
    }
    .required-field::after {
        content: " *";
        color: #dc3545;
    }
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
    }
    .input-group {
        display: flex;
        align-items: center;
    }
    .input-group .form-control {
        flex: 1;
    }
    .input-group-text {
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-left: none;
        border-radius: 0 4px 4px 0;
    }
</style>
{% endblock %}

{% block body %}
<div class="form-container">
    <div class="form-header">
        <h1>Modifier la société</h1>
        <a href="{{ path('app_societe_index') }}" class="btn btn-secondary">
            Retour à la liste
        </a>
    </div>

    <div class="form-card" style="color: var(--primary);">
        {{ form_start(form) }}

        <div class="form-section">
            <h3 class="form-section-title">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M3 21h18M5 21V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v16"></path>
                </svg>
                Informations générales
            </h3>
            
            <div class="form-group">
                {{ form_label(form.raisonSociale, null, {'label_attr': {'class': 'required-field'}}) }}
                {{ form_widget(form.raisonSociale, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.capital) }}
                <div class="input-group">
                    {{ form_widget(form.capital, {'attr': {'class': 'form-control'}}) }}
                    <span class="input-group-text">MAD</span>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h3 class="form-section-title">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
                Identifiants légaux
            </h3>
            
            <div class="form-grid">
                <div class="form-group">
                    {{ form_label(form.rc) }}
                    {{ form_widget(form.rc, {'attr': {'class': 'form-control form-control-sm'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.ice, null, {'label_attr': {'class': 'required-field'}}) }}
                    {{ form_widget(form.ice, {'attr': {'class': 'form-control form-control-sm'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.tp) }}
                    {{ form_widget(form.tp, {'attr': {'class': 'form-control form-control-sm'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.ifFiscal) }}
                    {{ form_widget(form.ifFiscal, {'attr': {'class': 'form-control form-control-sm'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.cnss) }}
                    {{ form_widget(form.cnss, {'attr': {'class': 'form-control form-control-sm'}}) }}
                </div>
            </div>
        </div>

        <div class="form-section">
            <h3 class="form-section-title">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45PrWcWBvSAXGj8bD2EAcwLJEf6Bkfw9Y1EknVsZCggqiNixWMwTX9HNJQ24FVfuLa4t8eXt1HPA1iUitADJLCoS5ua3WQR 1 22 16.92z"></path>
                </svg>
                Coordonnées
            </h3>
            
            <div class="form-grid">
                <div class="form-group">
                    {{ form_label(form.telephone) }}
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.fax) }}
                    {{ form_widget(form.fax, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.siteWeb) }}
                {{ form_widget(form.siteWeb, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-section">
            <h3 class="form-section-title">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.66 0 3-4.03 3-9s-1.34-9-3-9m0 18c-1.66 0-3-4.03-3-9s1.34-9 3-9m-9 9a9 9 0 019-9"></path>
                </svg>
                Informations bancaires
            </h3>
            
            <div class="form-group">
                {{ form_label(form.banque) }}
                {{ form_widget(form.banque, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.rib) }}
                {{ form_widget(form.rib, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        {# Ajoutez cette section juste avant le form-actions #}

<div class="form-section">
    <h3 class="form-section-title">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
        </svg>
        Documents joints
    </h3>

    <div id="documents-container">
        {# Container pour les documents existants (vide pour une nouvelle société) #}
        {% for document in form.documents %}
            <div class="document-item mb-3 p-3 border rounded">
                <div class="d-flex align-items-center">
                    {{ form_widget(document.nom, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Nom du document'}}) }}
                    {{ form_widget(document.fichier, {'attr': {'class': 'd-none'}}) }}
                    
                    <button type="button" class="btn btn-outline-danger btn-sm ml-2 document-remove-btn">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </div>
            </div>
        {% endfor %}
    </div>

    <button type="button" id="add-document" class="btn btn-outline-primary btn-sm mt-2">
        <i class="fas fa-plus mr-1"></i> Ajouter un document
    </button>
</div>

<style>
    .document-item {
        background-color: #f8f9fa;
        transition: all 0.3s;
    }
    .document-item:hover {
        background-color: #e9ecef !important;
    }
    .document-remove-btn {
        flex-shrink: 0;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Ajouter un nouveau document
    document.getElementById('add-document').addEventListener('click', function() {
        const container = document.getElementById('documents-container');
        const index = container.children.length;
        
        const template = `
        <div class="document-item mb-3 p-3 border rounded">
            <div class="d-flex align-items-center">
                <input type="text" name="societe[documents][${index}][nom]" 
                       class="form-control form-control-sm" 
                       placeholder="Nom du document" required>
                <input type="file" name="societe[documents][${index}][fichier]" 
                       class="d-none document-file-input"
                       data-index="${index}">
                <button type="button" class="btn btn-outline-primary btn-sm ml-2 document-select-btn"
                        data-index="${index}">
                    <i class="fas fa-file-upload"></i>
                </button>
                <button type="button" class="btn btn-outline-danger btn-sm ml-2 document-remove-btn">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </div>
            <small class="file-name text-muted" data-index="${index}">Aucun fichier sélectionné</small>
        </div>`;
        
        container.insertAdjacentHTML('beforeend', template);
        
        // Gestion de la sélection de fichier
        const selectBtn = container.querySelector(`.document-select-btn[data-index="${index}"]`);
        const fileInput = container.querySelector(`.document-file-input[data-index="${index}"]`);
        
        selectBtn.addEventListener('click', () => fileInput.click());
        
        fileInput.addEventListener('change', function() {
            const fileName = this.files[0] ? this.files[0].name : 'Aucun fichier sélectionné';
            container.querySelector(`.file-name[data-index="${index}"]`).textContent = fileName;
        });
    });

    // Suppression de document
    document.addEventListener('click', function(e) {
        if (e.target.closest('.document-remove-btn')) {
            e.target.closest('.document-item').remove();
            // Réorganiser les index si nécessaire
        }
    });
});
</script>

        <div class="form-actions">
            <button type="reset" class="btn btn-secondary">
                Réinitialiser
            </button>
            <button type="submit" class="btn btn-primary">
                Enregistrer
            </button>
        </div>

        {{ form_end(form) }}
    </div>

    </div>
</div>
{% endblock %}
