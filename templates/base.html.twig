        /* Correction pour la sidebar */
        .sidebar ~ footer {
            margin-left: 250px;
            transition: margin-left 0.3s;
        }
        
        .sidebar.collapsed ~ footer {
            margin-left: 70px;
        }
        
        @media (max-width: 992px) {
            .sidebar ~ footer,
            .sidebar.collapsed ~ footer {
                margin-left: 0;
            }
