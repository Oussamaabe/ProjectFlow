        /* Variables pour le mode clair */
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --success: #4cc9f0;
            --dark: #1d3557;
            --light: #f8f9fa;
            --accent: #f72585;
            --bg-color: #f5f7fb;
            --text-color: #333;
            --card-bg: #fff;
            --navbar-bg: linear-gradient(135deg, var(--dark), var(--primary));
            --sidebar-bg: var(--dark);
            --footer-bg: var(--dark);
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            --border-color: rgba(0, 0, 0, 0.1);
        }
        
        /* Variables pour le mode sombre */
        [data-theme="dark"] {
