{# templates/group/manage_permissions.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}GÃ©rer les permissions - {{ group.name }}{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-key me-2"></i>Permissions du groupe {{ group.name }}
        </h1>
        <a href="{{ path('app_group_show', {'id': group.id}) }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'permissions-form'}}) }}
                <div class="mb-4">
                    <h3 class="h5 mb-3 fw-bold">Permissions disponibles</h3>
                    <div class="bg-light p-3 rounded">
                        <div class="row">
                            {{ form_row(form.permissions, {
                                'label': false,
                                'attr': {'class': 'permission-checkboxes'}
                            }) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% block stylesheets %}
<style>
    .permission-checkboxes .form-check {
        margin-bottom: 0.8rem;
        padding-left: 2.5rem;
    }
    
    @media (min-width: 768px) {
        .permission-checkboxes .form-check {
            width: 50%;
            float: left;
        }
    }
    
    @media (min-width: 992px) {
        .permission-checkboxes .form-check {
            width: 33.333%;
        }
    }
</style>
{% endblock %}
{% endblock %}