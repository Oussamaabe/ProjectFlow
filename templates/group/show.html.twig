{% extends 'base.html.twig' %}
{% block title %}Group{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0" style="color: var(--text-color);">Détails du groupe</h1>
        <div>
            <a href="{{ path('app_group_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour
            </a>
            <a href="{{ path('app_group_edit', {'id': group.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Modifier
            </a>
        </div>
    </div>

    <div class="card shadow-sm" style="background-color: var(--card-bg);">
        <div class="card-body">
            <table class="table table-striped" style="color: var(--text-color);">
                <tbody>
                    <tr>
                        <th class="w-25" >ID</th>
                        <td>{{ group.id }}</td>
                    </tr>
                    <tr>
                        <th >Nom</th>
                        <td>{{ group.name }}</td>
                    </tr>
                    <tr>
                        <th >Rôles</th>
                        <td>
                            {% if group.roles %}
                                <div class="d-flex flex-wrap gap-2">
                                    {% for role in group.roles %}
                                        <span class="badge bg-primary">{{ role|replace({'ROLE_': ''}) }}</span>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <span class="text-muted">Aucun rôle</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between mt-4">
                {{ include('group/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}